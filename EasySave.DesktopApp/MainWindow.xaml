<Window x:Class="EasySave.DesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.DesktopApp"
        xmlns:ig="http://schemas.infragistics.com/xaml"
        xmlns:language="clr-namespace:EasySave.DesktopApp.Resources"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="EaseSave" FontSize="24" FontWeight="Bold" Margin="10" />

        <DataGrid Grid.Row="1" Margin="5" IsReadOnly="True"  Name="dgSaveWorks" AutoGenerateColumns="False" ItemsSource="{Binding _Model.ArrayOfSaveWork}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding _SaveWorkModel.NameSaveWork}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding _SaveWorkModel.TypeSaveWork}" Width="*"/>
                <DataGridTextColumn Header="PathFrom" Binding="{Binding _SaveWorkModel.SourcePathSaveWork}" Width="*"/>
                <DataGridTextColumn Header="PathTo" Binding="{Binding _SaveWorkModel.DestinationPathSaveWork}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="{x:Static Resources:langage.tabName}" Margin="5" Click="AddSaveWorkCommand"/>
            <Button Content="Tout lancer" Margin="5" Click="LaunchAllCommand"/>
            <Button Content="lancer" Margin="5" Click="LaunchCommand"/>
            <Button Content="Supprimer" Margin="5" Click="deleteCommand"/>
        </StackPanel>
    </Grid>
</Window>
